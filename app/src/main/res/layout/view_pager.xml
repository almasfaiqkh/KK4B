<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/onboard_img"
        android:layout_width="315dp"
        android:layout_height="322dp"
        android:layout_marginTop="50dp"
        android:src="@drawable/onboard1" />

    <TextView
        android:id="@+id/onboard_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:text="Temukan Event"
        android:textColor="#202020"
        android:textSize="20sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/onboard_subtitle"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="30dp"
        android:lineSpacingExtra="3sp"
        android:text="Temukan berbagai event yang akan diadakan di kota Purwokerto dengan mudah"
        android:textAlignment="center"
        android:textColor="#B0B0B0"
        android:textSize="14sp" />

</LinearLayout>